!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Journal
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{"ng-app" => "appModule", "ng-controller" => "AppCtrl"}
    %form{:name => "authentication"}
      %input{"ng-model" => "login", "ng-required" => "true", :placeholder => "Login", :type => "text"}
      %input{"ng-model" => "password", "ng-required" => "true", :placeholder => "Password", :type => "password"}
      %button{"ng-click" => "auth(login, password)"} Sign in
    %form{:name => "subjectCreate"}
      %input{"ng-model" => "subjectName", "ng-required" => "true", :placeholder => "Subject name", :type => "text"}
      %button{"ng-click" => "createSubject(subjectName)"} Add Subject
    %ui-view
